<div class="container mx-auto" style="width: 1100px;">
  <h2><%= @song.name %></h2>
    <h4>Artist: <%=@song.artist%></h4>
    <h4>Difficulty: <%= @song.difficulty %>/10</h4>
    <h4>Users currently learning:</h4>
    <% if !@song.users.empty? %>
      </h4>
      <ul class="list-group" style="width: 300px;">
        <% @song.users.each do |user| %>
          <li class="list-group-item"><a href="/users/<%=user.id%>"><%= user.name %></a></li>
        <% end %>
      </ul>
    <% else %>
      &nbsp; &nbsp; No users have added this song yet. <a href="/users/edit">Be the first.</a>
    <% end %>
</div>
